@ModuleInfo { minPclVersion = "0.15.0" }
module podSecretEnv

amends "applehub:com.apple.k8s.AppEnvCluster:92ec8dc7"

import "applehub:io.k8s.K8sObject:92ec8dc7"

local appName = "pod-secret-env"
local imageUrl = "docker.apple.com/busybox:latest"

pods {
  [appName] {
    metadata {
      name = appName
    }
    spec {
      terminationGracePeriodSeconds = 0
      runtimeClassName = "microvm"
      containers {
        new {
          name = appName
          image = imageUrl
          command {
            "tail"
            "-f"
            "/dev/null"
          }
          env {
            new {
              name = "SECRET_USERNAME"
              valueFrom {
                secretKeyRef {
                  name = "test-secret"
                  key = "username"
                }
              }
            }
            new {
              name = "SECRET_PASSWORD"
              valueFrom {
                secretKeyRef {
                  name = "test-secret"
                  key = "password"
                }
              }
            }
          }
        }
      }
    }
  }
}

output {
  renderer = YamlRenderer {
    isStream = true
    converters = (K8sObject.output.renderer as YamlRenderer).converters
  }
  value = module.toMap().values.flatMap((it) -> it.toMap().values)
}
